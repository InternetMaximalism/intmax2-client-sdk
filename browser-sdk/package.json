{
  "name": "intmax2-client-sdk",
  "version": "1.5.0",
  "description": "Client SDK for INTMAX2",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:workers": "tsc -p tsconfig.workers.json",
    "build": "rimraf dist && pnpm build:cjs && pnpm build:esm && pnpm build:types && pnpm build:workers && pnpm run copy-wasm && pnpm run copy-workers",
    "copy-wasm": "mkdir -p dist/esm/wasm dist/cjs/wasm && cp -r src/wasm/* dist/esm/wasm/ && cp -r src/wasm/* dist/cjs/wasm/",
    "copy-workers": "mkdir -p dist/esm/workers dist/cjs/workers && cp -r dist/workers/workers/* dist/esm/workers/ && cp -r dist/workers/workers/* dist/cjs/workers/",
    "prepare": "pnpm build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --max-warnings=0 --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "sdk",
    "client",
    "intmax2"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@scure/bip32": "^1.7.0",
    "@scure/bip39": "^1.6.0",
    "axios": "^1.11.0",
    "consola": "^3.4.2",
    "viem": "^2.31.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/ui": "^3.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.2",
    "node": "^24.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.9.0+sha1.3edbe440f4e570aa8f049adbd06b9483d55cc2d2"
}
